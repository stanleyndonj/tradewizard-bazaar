modules = ["nodejs-20", "python-3.12", "web", "nodejs-23", "postgresql-17", "python-base-3.12"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = 42038948
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install -r requirements.txt && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
